---
interface Props {
  title?: string;
  description?: string;
}

import "@fontsource-variable/onest";
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const props = Astro.props as Props;
const {
  title = "Porfolio Alvaro Juárez · Desarrollador de software",
  description = "Contrata a Álvaro Juárez, desarrollador de software especializado en crear soluciones innovadoras y eficientes.",
} = props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
  </head>
  <body class="relative">
    <div class="fixed inset-0 -z-10 h-full w-full bg-slate-950">
      <div class="absolute bottom-0 left-0 right-0 top-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-size-[14px_24px]"></div>
    </div>
    <div class="w-full lg:max-w-4xl md:max-w-2xl mx-auto flex flex-col min-h-screen">
      <Header />
      <slot />
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: dark;
  }

  html {
    font-family: "Onest Variable", sans-serif;
    scroll-behavior: smooth;
  }

  body {
    color: #f7f7f7;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
