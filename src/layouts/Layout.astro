---
interface Props {
  title?: string;
  description?: string;
}

import '@fontsource-variable/onest';
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const props = Astro.props as Props; // type the props to avoid TS complaints
const {
	title = "Porfolio Alvaro Juárez · Desarrollador de software",
	description = "Contrata a Álvaro Juárez, desarrollador de software especializado en crear soluciones innovadoras y eficientes."
} = props;
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="pointer-events-none fixed inset-0 -z-10 overflow-hidden">
			<div class="absolute inset-0 bg-neutral-950"></div>
			<div class="absolute left-1/4 top-[-20%] h-[55vh] w-[65vw] rounded-full bg-[radial-gradient(circle_at_center,rgba(120,119,198,0.35),transparent_60%)] blur-3xl opacity-70"></div>
			<div class="absolute right-[-15%] top-[10%] h-[50vh] w-[55vw] rounded-full bg-[radial-gradient(circle_at_center,rgba(255,140,105,0.22),transparent_60%)] blur-3xl opacity-70"></div>
			<div class="absolute inset-0 bg-[linear-gradient(115deg,rgba(255,255,255,0.03)_1px,transparent_1px),linear-gradient(245deg,rgba(255,255,255,0.03)_1px,transparent_1px)] bg-size-[140px_140px]"></div>
			<div class="absolute inset-0 mix-blend-soft-light opacity-50" style="background-image: url('data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 200 200%22%3E%3Cfilter id=%22n%22 x=%22-20%25%22 y=%22-20%25%22 width=%22140%25%22 height=%22140%25%22%3E%3CfeTurbulence type=%22fractalNoise%22 baseFrequency=%220.8%22 numOctaves=%224%22 stitchTiles=%22stitch%22/%3E%3C/filter%3E%3Crect width=%22100%25%22 height=%22100%25%22 filter=%22url(%23n)%22 opacity=%220.15%22/%3E%3C/svg%3E');"></div>
		</div>
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style is:global>
	:root{
		color-scheme: light dark;
	}


	html{
		font-family: 'Onest Variable', sans-serif;
		scroll-behavior: smooth;
	}

	body {
		background: #0a0a0a;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	@media (prefers-reduced-motion: reduce)
	{
		html {
			scroll-behavior: auto;
		}
	}
</style>
