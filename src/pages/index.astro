---
import Layout from '../layouts/Layout.astro';
import LinkedInIcon from '../components/icons/LinkedIn.astro';
import GitHubIcon from '../components/icons/GitHub.astro';
import SocialPill from '../components/SocialPill.astro';
import MailIcon from '../components/icons/Mail.astro';
import SectionContainer from '../components/SectionContainer.astro';
import CodeIcon from '../components/icons/Code.astro';
import Projects from '../components/Projects.astro';
---

<Layout>
	<main>
		<SectionContainer class="py-20 pb-24">
			<img 
				class="rounded-full size-20 object-contain mb-4"
				src="/foto.png" 
				alt="Foto alvaro"
			/>
			<h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 items-center pb-4">
				Hey, soy Álvaro
				<a href="https://www.linkedin.com/in/%C3%A1lvaro-ju%C3%A1rez-garc%C3%ADa-894254303/"
						target="_blank"
						rel="noopener noreferrer"
						class="flex items-center"
				>
				<div class="flex justify-center items-center px-2 py-1 bg-green-400 bg-opacity-20 text-black text-xs font-light rounded-full whitespace-nowrap">
					Disponible para trabajar
				</div>
				</a>
			</h1>
			<h2 class="text-2xl text-wrap">
				<span class="text-amber-400">Ingeniería Informática</span> · 
				<span class="opacity-50">Software Developer</span> <br>
				Explorando el mundo de la 
				<span class="text-amber-300">Inteligencia Artificial</span>.
				<span class="text-red-200/90">De Murcia, España <span class="text-lg">ES. </span></span>
				<span class="opacity-70">Especializado en crear aplicaciones únicas.</span>
			</h2>

			<nav class="flex flex-wrap gap-3 mt-8">
					<SocialPill href="https://www.linkedin.com/in/%C3%A1lvaro-ju%C3%A1rez-garc%C3%ADa-894254303/">
						<LinkedInIcon class="size-6" />
						<span class="text-sm font-medium">LinkedIn</span>
					</SocialPill>
				
					<SocialPill href="https://github.com/Alvarojrzz">
						<GitHubIcon class="size-6" />
						<span class="text-sm font-medium">GitHub</span>
					</SocialPill>

					<SocialPill href="mailto:juarezgarciaalvaro@gmail.com">
						<MailIcon class="size-6" />
						<span class="text-sm font-medium">juarezgarciaalvaro@gmail.com</span>
					</SocialPill>
			</nav>
		</SectionContainer>

		<SectionContainer id="proyectos">
			<h2 class="text-2xl font-semibold mb-6 flex items-center gap-x-3">
				<CodeIcon class="size-7 text-amber-400" />
				Proyectos Destacados
			</h2>
			<Projects />
		</SectionContainer>
	</main>

</Layout>
